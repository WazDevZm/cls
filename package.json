    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
