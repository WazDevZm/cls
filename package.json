{
  "name": "cls-website",
  "version": "1.0.0",
  "description": "CLS - Code That Serves. Software That Delivers.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
